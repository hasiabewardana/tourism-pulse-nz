{
  "compilerOptions": {
    "target": "ES2020", // Targeting modern JavaScript for Node.js 18 compatibility
    "module": "commonjs", // Using CommonJS for Node.js module system
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "rootDir": "./src", // Source directory for TypeScript files
    "strict": true, // Enabling all strict type-checking options
    "esModuleInterop": true, // Improving interop between CommonJS and ES Modules
    "skipLibCheck": true, // Skipping type checking of declaration files for performance
    "forceConsistentCasingInFileNames": true // Enforcing consistent file name casing
  },
  "include": ["src/**/*"], // Including all TypeScript files under src/
  "exclude": ["node_modules"] // Excluding node_modules from compilation
}
